pipeline {
    agent any
    stages {
        stage('Clone Code') {
            steps {
                git url: 'https://github.com/DevOpsWithAlii/netflix-docker.git', branch: 'main'
            }
        }

        stage('Build WAR file') {
            steps {
                sh '''
                docker run --rm -v $PWD:/usr/src/app -w /usr/src/app maven:3.9.6-eclipse-temurin-17 mvn clean package -DskipTests
                '''
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t netflix_image .'
            }
        }

        stage('Deploy Container') {
            steps {
                sh 'docker compose down'
                sh 'docker compose up -d --build'
            }
        }
    }
}
